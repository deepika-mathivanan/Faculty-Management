<%- include("../partials/header.ejs") %>

<section id="header" class="jumbotron text-center">
  <h1>
    <%= publication.title %>
  </h1>
  <p class="lead text-custom">
    <%= publication.author.username %>
  </p>
</section>

<div class="row justify-content-center">
  <% if (publication.isVerified == undefined || publication.isVerified == 0) { %>
    <a class="btn btn-outline-warning btn-sm" href="/faculties/<%= faculty._id %>/publications/<%= publication._id %>/verify">
      <b>click to verify</b>
    </a>
  <% } else { %>
    <a class="btn btn-success btn-sm" href="#">verified</a>
  <% } %>
</div>

<p>Id: <%= publication.id %></p>
<p>Title: <%= publication.title %></p>
<p>Year of Publishing: <%= publication.year %></p>
<p>Type: <%= publication.type %></p>

<!-- Content rendered as a clickable URL -->
<p>
  googleScholar: 
  <a href="<%= publication.content %>" target="_blank" rel="noopener noreferrer">
    <%= publication.content %>
  </a>
</p>

<br><br>

<a class="btn btn-block btn-success" href="/faculties/<%= faculty._id %>/publications/<%= publication._id %>/edit">
  edit
</a>

<form action="/faculties/<%= faculty._id %>/publications/<%= publication._id %>?_method=DELETE" method="POST">
  <button class="btn btn-block btn-danger">
    delete
  </button>
</form>

<%- include("../partials/footer.ejs") %>
